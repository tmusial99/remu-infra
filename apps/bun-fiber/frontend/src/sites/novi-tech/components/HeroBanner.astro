---
import { Picture } from 'astro:assets';
import addressBookIcon from '../assets/address-book.svg?raw';
import heroImage from '../assets/hero-image.png';
---

<section class="hero-banner-wrapper">
	<div class="hero-banner">
		<div class="text">
			<h1>
				Nowoczesne i niezawodne instalacje teletechniczne, sieci komputerowe, światłowody, systemy alarmowe w
				Wielkopolsce
			</h1>
			<p>Nie czekaj, zamów wycenę już teraz!</p>
			<a href="#contact"><Fragment set:html={addressBookIcon} />Zobacz dane kontaktowe</a>
		</div>
		<div class="hero-image">
			<Picture
				src={heroImage}
				formats={['avif', 'webp', 'png']}
				alt="Obraz poglądowy reprezentujący kamerę monitoringu IP, router i kabel sieciowy"
				sizes="(max-width: 800px) calc(100vw - 64px), 500px"
				widths={[320, 480, 500, 600, 721]}
				loading="eager"
				decoding="async"
			/>
		</div>
	</div>
</section>

<style>
	:root {
		--hero-bg-color: #eaf7ff;
		--hero-accent-color: rgb(34, 68, 124);
	}

	.hero-banner-wrapper {
		padding: 32px;
		background-color: var(--hero-bg-color);
		display: flex;
		justify-content: center;
	}
	.hero-banner {
		max-width: 1000px;
		display: grid;
		grid-template-columns: 1fr 1fr;
	}

	p {
		font-size: 18px;
	}

	a {
		color: inherit;
		text-decoration: none;
		width: min(100%, 400px);
		display: flex;
		gap: 8px;
		align-self: center;
		align-items: center;
		justify-content: center;
		margin-top: 6px;
		border: 2px solid var(--hero-accent-color);
		background-color: var(--hero-accent-color);
		color: white;
		fill: white;
		border-radius: 100px;
		font-size: 18px;
		padding: 4px 8px;
		transition: all 0.15s;
		font-weight: bold;
		svg {
			height: 40px;
			width: 40px;
			fill: currentColor;
		}
	}

	a:hover {
		cursor: pointer;
		transform: scale(110%);
	}

	@media (max-width: 800px) {
		.hero-banner {
			grid-template-columns: 1fr;
			justify-items: center;
		}

		.hero-image {
			max-width: 800px;
		}
	}

	.text {
		position: relative;
		text-align: center;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: stretch;
	}

	h1 {
		font-size: 32px;
		font-family: 'PT Serif', serif;
		text-transform: uppercase;
		margin-bottom: 16px;
		color: var(--hero-accent-color);
	}

	.hero-image {
		img {
			object-fit: contain;
			display: block;
			height: 100%;
			max-width: 100%;
		}
	}
</style>
