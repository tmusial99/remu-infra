---
interface Props {
	icon: string;
	text: string;
	heading: string;
	color?: string;
}

const { icon, heading, text, color = 'currentColor' } = Astro.props;
---

<div class="card">
	<div class="icon" style={`color:${color}`} aria-hidden="true">
		<Fragment set:html={icon} />
	</div>
	<h2>{heading}</h2>
	<p>{text}</p>
</div>

<style>
	.card {
		background-color: rgb(236, 236, 236);
		border-radius: 12px;
		padding: 18px;
		display: flex;
		flex-direction: column;
		width: 100%;
		min-width: 290px;
		transition: all 0.2s linear;
	}

	.card:hover {
		box-shadow: 0px 0px 16px 12px rgb(0 0 0 / 30%);
		transform: scale(105%);
	}

	h2 {
		font-size: 24px;
		margin-bottom: 6px;
	}

	.icon {
		margin-inline: auto;
		flex: 0 0 auto;
		width: 70px;
		height: 70px;
		margin-bottom: 8px;

		svg {
			width: 100%;
			height: 100%;
			fill: currentColor;
			stroke: none;
		}
	}
</style>
