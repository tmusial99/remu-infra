---
interface Props {
	icon: string;
	text: string;
	color?: string;
}

const { icon, text, color = 'currentColor' } = Astro.props;
---

<div class="feature-item">
	<div class="feature-icon" style={`color:${color}`} aria-hidden="true">
		<Fragment set:html={icon} />
	</div>
	<p class="feature-text">{text}</p>
</div>

<style>
	.feature-item {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 12px;
		/* max-width: 300px; */
	}

	.feature-icon {
		flex: 0 0 auto;
		width: 42px;
		height: 42px;

		svg {
			width: 100%;
			height: 100%;
			fill: currentColor;
			stroke: none;
		}
	}

	.feature-text {
		font-size: 18px;
		font-weight: bold;
	}
</style>
