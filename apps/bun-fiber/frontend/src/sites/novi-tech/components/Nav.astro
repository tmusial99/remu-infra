---
import logo from '../assets/logo.svg?raw';
---

<nav>
	<div class="logo">
		<Fragment set:html={logo} />
	</div>
</nav>

<style>
	nav {
		height: 150px;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 12px;
		padding: 8px;
		margin-bottom: 16px;
	}

	a {
		color: inherit;
		text-decoration: none;
		min-width: fit-content;
	}

	.logo {
		width: fit-content;
		height: 100%;
		margin-right: 12px;

		svg {
			width: 100%;
			height: 100%;
		}
	}
</style>
